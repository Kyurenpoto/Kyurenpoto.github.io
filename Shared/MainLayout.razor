@inherits LayoutComponentBase

<nav class="sidebar">
    <div class="@NavMenuCssClass overlay-wrap" @onclick="ToggleNavMenu">
        <ul class="nav flex-column">
            <li class="nav-item px-3">
                <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                    <span class="oi oi-home" aria-hidden="true" />
                    Home
                </NavLink>
            </li>
            <li class="nav-item px-3">
                <NavLink class="nav-link" href="machinelearning">
                    <span class="fas fa-robot" aria-hidden="true" />
                    Machine Learning
                </NavLink>
            </li>
        </ul>
        <div class="overlay-1" />
    </div>
</nav>

<main>
    <header class="top-row overlay-wrap">
        <a class="navbar-brand" href="">어떤 프로그래머의 비망록</a>
        <button class="navbar-toggler" @onclick="ToggleNavMenu">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="overlay-primary-1"></div>
    </header>

    <div class="@ContentCssClass content">
        @Body
    </div>

    <footer>

    </footer>
</main>

@code {
    private bool collapseNavMenu = true;

    private string NavMenuCssClass => collapseNavMenu ? "collapse" : null;
    private string ContentCssClass => collapseNavMenu ? null : "collapse";

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}
